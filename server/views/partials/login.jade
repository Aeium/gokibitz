h2 Login

form.form-signin.form-inline(
	name='form'
	ng-submit='login(form)'
	novalidate
	role='form'
)

	p.help-block(ng-show="form.email.$error.mongoose") {{ errors.email }}
	p.help-block(ng-show="form.password.$error.mongoose") {{ errors.password }}

	.form-group(ng-class="{'has-error': form.email.$error.mongoose}")
		label.sr-only(for='email') Email address:
		input.form-control(
			placeholder='Email address'
			type='text'
			name='email'
			ng-model='user.email'
			required
			autofocus
			mongoose-error
		)
	= ' '
	.form-group(ng-class="{'has-error': form.password.$error.mongoose}")
		label.sr-only(for='password') Password:
		input.form-control(
			placeholder='Password'
			type='password'
			name='password'
			ng-model='user.password'
			required
			mongoose-error
		)
	= ' '
	button.btn.btn-default(type='submit') Login

	.form-group.has-error
		p.help-block {{ error.other }}

p Don't have an account, yet?
	= ' '
	a(href='/signup') Sign up
