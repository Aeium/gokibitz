.row
	.col-sm-offset-2.col-sm-8.col-md-offset-3.col-md-6
		.col-sm-offset-4.col-sm-8
			h2 Login

		.col-sm-12
			form.form-horizontal.form-signin(
				name='form'
				ng-submit='login(form)'
				novalidate
				role='form'
			)

				p.help-block(ng-show="form.email.$error.mongoose") {{ errors.email }}
				p.help-block(ng-show="form.password.$error.mongoose") {{ errors.password }}

				.form-group(ng-class="{'has-error': form.email.$error.mongoose}")
					label.col-sm-4.control-label(for='email') Email address:
					.col-sm-8
						input.form-control(
							placeholder='Email address'
							type='text'
							name='email'
							ng-model='user.email'
							required
							autofocus
							mongoose-error
						)

				.form-group(ng-class="{'has-error': form.password.$error.mongoose}")
					label.col-sm-4.control-label(for='password') Password:
					.col-sm-8
						input.form-control(
							placeholder='Password'
							type='password'
							name='password'
							ng-model='user.password'
							required
							mongoose-error
						)

				.form-group
					.col-sm-offset-4.col-sm-8
						button.btn.btn-primary(type='submit') Login

				.form-group.has-error
					.col-sm-offset-4.col-sm-8
						p.help-block {{ error.other }}

				.col-sm-offset-4.col-sm-8
					p Don't have an account, yet?
						= ' '
						a(href='/signup') Sign up
